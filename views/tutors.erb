<div>

  <div class="page-header">
    <h1>Tutors

      <% if @user.type == "Student" %>
      <form class="pull-right">
        <button id="find-tutors-button" class="btn btn-primary pull-right">
          <span class="glyphicon glyphicon-search"></span>
          Find Tutors</button>
        <input type="text" name="query" id="find-tutors-input" class="form-control pull-right" placeholder="Search by name, email address, or username" autocomplete="off"/>
      </form>
      <div class="search-results-container">
        <ul id="search-results"></ul>
      </div>
      <% end %>

    </h1>
  </div>

  <div class="appointments">

    <% if @tutors.count == 0 %>
    <h3 class="text-muted">You have no tutors.</h3>
    <% else %>

    <table class="table table-bordered">
      <thead>
        <tr>
          <td>Name</td>
          <td>Username</td>
          <td>Email</td>
        </tr>
      </thead>
      <tbody>
        <% @tutors.each do |tutor| %>
        <tr>
          <td><%= tutor.name %></td>
          <td><%= tutor.username %></td>
          <td><%= tutor.email %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <% end %>
  </div>

</div>
