<div>

  <div class="page-header">
    <h1>Students</h1>
  </div>


  <div class="appointments">
    <% if @students.count == 0 %>
    <h3 class="text-muted">You have no students.</h3>
    <% else %>

      <table class="table table-bordered">
        <thead>
          <tr>
            <td>Name</td>
            <td>Username</td>
            <td>Email</td>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.username %></td>
            <td><%= student.email %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    <% end %>
  </div>

</div>
